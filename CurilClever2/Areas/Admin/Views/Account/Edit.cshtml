@using CurilClever2.Models;
@using CurilClever2.ViewModels;
@model EditUserViewModel
@{
  ViewData["Title"] = "Edit";
  Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="row">
  <div class="col-md-4">
    <form asp-area="admin" asp-action="Edit" asp-controller="Account" asp-anti-forgery="true">
      <div class="validation" asp-validation-summary="ModelOnly" />
      <div>
        <input type="hidden" asp-for="User.id" />
        <div class="form-group">
          <label asp-for="User.name" class="control-label"> имя</label><br />
          <input type="text" asp-for="User.name" disabled />
          <span asp-validation-for="User.name" />
        </div>
        <div class="form-group">
          <label asp-for="User.Login" class="control-label"> логин</label><br />
          <input type="text" asp-for="User.Login" disabled />
          <span asp-validation-for="User.Login" />
        </div>
        <div class="form-group">
          <label asp-for="newRole" class="control-label"></label>
          <select asp-for="newRole" class="form-control" asp-items="Model.roles"></select>
          <span asp-validation-for="newRole" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
      </div>
    </form>
    <a asp-action="Index">Back to List</a>
  </div>

</div>
