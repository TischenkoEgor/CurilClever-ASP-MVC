@model CurilClever2.Models.Order


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
  ViewData["Title"] = Localizer["Edit"];
}

  <h2>@Localizer["Editing an application"]</h2>

  <h4>@Localizer["Order"] № @Model.id</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="BeginTravelDate" class="control-label"></label>
        <input asp-for="BeginTravelDate" class="form-control" />
        <span asp-validation-for="BeginTravelDate" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="EndTravelDate" class="control-label"></label>
        <input asp-for="EndTravelDate" class="form-control" />
        <span asp-validation-for="EndTravelDate" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Hotelid" class="control-label"></label>
        <select asp-for="Hotelid" class="form-control" asp-items="ViewBag.Hotels"></select>
        <span asp-validation-for="Hotelid" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Clientid" class="control-label"></label>
        <select asp-for="Clientid" class="form-control" asp-items="ViewBag.Clients"></select>
        <span asp-validation-for="Clientid" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="TotalPaid" class="control-label"></label>
        <input asp-for="TotalPaid" class="form-control" />
        <span asp-validation-for="TotalPaid" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="PayStatus" class="control-label"></label>
        <select asp-for="PayStatus" asp-items="Html.GetEnumSelectList<PayStatus>()" class="form-control"></select>
        <span asp-validation-for="PayStatus" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value=@Localizer["Save"].Value class="btn btn-default" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

