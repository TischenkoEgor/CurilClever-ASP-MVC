@model CurilClever2.Models.News

@{
  ViewData["Title"] = Localizer["Title"];// "Details";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

  <h2>@Localizer["Details"]</h2>

<div>
  <h4>@Localizer["News"]</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.TextShort)
    </dt>
    <dd>
      <p>@Model.TextShort</p>
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.TextFull)
    </dt>
    <dd>
      <p>@Html.Raw(Model.TextFull)</p>
    </dd>
    <dt>
    </dt>
    <dd>
      <a href="@Model.ObjectUrl">@Localizer["ObjectLink"]</a>
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.User)
    </dt>
    <dd>
      <p>автор действия @Model.User.Login</p>
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.Created)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.Created)
    </dd>
  </dl>
</div>
<div>
  <a asp-controller="home" asp-action="Index">@Localizer["BacktoList"]</a>
</div>
