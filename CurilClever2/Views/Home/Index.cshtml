@using CurilClever2.ViewModels
@model HomePageViewModel
@{
  ViewData["Title"] = "Index";
}
<div class="jumbotron text-center">
  <h2>Index</h2>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>Последние новости</h3>
      <table class="table table-striped table-hover">
        <tr>
          <td>Дата</td>
          <td>Описание</td>
          <td>Ссылка</td>
        </tr>

        @foreach (News news in Model.News)
        {
          <tr>
            <td><a asp-controller="News" asp-action="Details" asp-route-id="@news.id">@news.Created.ToUniversalTime()</a></td>

            <td><p >@news.TextShort</p></td>

            <td><a href="@news.ObjectUrl">перейти к объекту</a></td>
          </tr>
        }
      </table>
    </div>
    <div class="col-md-4"><p>Column 2</p></div>
    <div class="col-md-4"><p>Column 3</p></div>
  </div>
  <div class="row">
    <div class="col-md-12"><p>Column 5</p></div>
  </div>
</div>

