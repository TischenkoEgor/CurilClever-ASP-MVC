@model CurilClever2.ViewModels.LoginModel
@{
  ViewData["Title"] = "login";
  ViewData["PageDescription"] = "Страница входа на сайт, без авторизации дальше пройти нельзя!";
}
<h2>Вход на сайт</h2>
<div class="row">
  <div class="col-lg-6">
    <a asp-action="Register" asp-controller="Account">Регистрация</a>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
      <div class="validation" asp-validation-summary="ModelOnly" />
      <div>
        <div class="form-group">
          <label asp-for="Login">Введите Email</label>
          <input type="text" asp-for="Login" />
          <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
          <label asp-for="Password">Введите пароль</label>
          <input asp-for="Password" />
          <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Войти" class="btn" />
        </div>
      </div>
    </form>
  </div>
  <div class="col-lg-6">
    <h3>Или авторизуйтесь через  соц сеть</h3>
    <a class="btn btn-default btn" href="https://oauth.vk.com/authorize?client_id=7020055&redirect_uri=@ViewData["callbackurl"]&display=popup&scope=email&response_type=code&v=5.59">
      <i class="glyphicon glyphicon-chevron-right"></i>
      Войти через VK
    </a>
  </div>
</div>
